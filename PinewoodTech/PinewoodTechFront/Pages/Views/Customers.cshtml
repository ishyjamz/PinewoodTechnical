@page "/customer-list"
@model Customers
@{
    ViewData["Title"] = "Customers";
}

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="container">
    <div class="row text-center">
        <div class="col-12">
            <h1>Customers</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                <tr class="text-center">
                    <td>
                        Name
                    </td>
                    <td>
                        Email
                    </td>
                    <td>
                        Action
                    </td>
                    <td></td>
                </tr>
                </thead>
                <tbody>
                @foreach (var customer in Model.CustomerList)
                {
                    <tr class="text-center">
                        <td>
                            @customer.Name
                        </td>
                        <td>
                            @customer.Email
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/customer-edit/@customer.Id">Edit</a>
                        </td>
                        <td>
                            <button class="btn btn-danger delete-btn" data-id="@customer.Id">Delete</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col text-center">
            <a class=" btn btn-success" href="/customer-add">Add Customer</a>
        </div>
    </div>
</div>
<script src="~/js/customer-delete.js"></script>
</body>
</html>