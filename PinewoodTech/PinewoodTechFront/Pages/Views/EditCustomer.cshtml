@page "/customer-edit"
@model PinewoodTechFront.Pages.Views.EditCustomer

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title></title>
</head>
<body>
<div class="container">
    <div class="row text-center">
        <div class="col">
            <h1>EditCustomer</h1>
        </div>
    </div>

    <form method="post">
        <div class="row justify-content-center mb-3">
            <div class="col-6">
                <div class="form-group">
                    <label class="mb-1" for="name">Name</label>
                    <input type="text" asp-for="Customer.Name" class="form-control" id="name" value="@Model.Customer.Name" placeholder="Enter full name" required>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-4">
            <div class="col-6">
                <div class="form-group">
                    <label class="mb-1" for="email">Email</label>
                    <input type="email" asp-for="Customer.Email" class="form-control" id="email" value="@Model.Customer.Email" placeholder="john.doe@example.com" required>
                </div>
            </div>
        </div>
        <div class="row justify-content-center text-center">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>
<script src="PinewoodTechFront/Pages/Scripts/customer-add.js"></script>
</body>
</html>